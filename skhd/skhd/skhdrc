# -- Changing Window Focus --

cmd + alt - c      : open -a "Ghostty"
cmd + alt - f      : open -a "Figma"
cmd + alt - w      : open -a "WhatsApp"
cmd + alt - n      : open -a "Microsoft OneNote"
cmd + alt - g      : open -a "ChatGPT"
cmd + alt - b      : open -a "FireFox"
cmd + alt - v      : open -a "VmVApp"
cmd + alt - t      : open -a "Telegram"

cmd + alt - 1 : open -a "FireFox" "https://docs.google.com/spreadsheets/u/0/"
cmd + alt - x : open -a "FireFox" "https://sheets.new"
cmd + alt - z : open -a "FireFox" "https://github.com/dashboard"

